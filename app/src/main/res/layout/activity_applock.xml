<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenbackgroundsBlue"
    tools:context=".Activities.ApplockActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/toplay"
        android:layout_weight="0.7"
        android:background="@color/screenbackgroundsBlue"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lgoinlogin"
            android:layout_centerInParent="true"
            android:src="@drawable/logoslider"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/cardviewlook"
        android:layout_weight="1.3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Password Required"
            android:textSize="22dp"
            android:textStyle="bold"
            android:fontFamily="@font/petitamedium"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passwordstr_inLogin"
                android:layout_marginLeft="3dp"
                android:textColor="@color/appTextColor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/petitamedium"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordEt_applock"
                android:textSize="16dp"
                android:inputType="numberPassword"
                android:hint="xxxxxxxxxx"/>

        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/petitamedium"
            android:textStyle="bold"
            android:id="@+id/submitBtn_applock"
            android:layout_alignParentBottom="true"
            android:text="GO"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bluelanguagebtn"
            />



    </RelativeLayout>


</LinearLayout>