<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/listbgnewww">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Mukhtiyar Afzal"
            android:layout_alignParentLeft="true"
            android:id="@+id/nametitleTv"
            android:fontFamily="@font/petitamedium"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/appTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Last Updated: 05/5/2020"
                android:fontFamily="@font/petitamedium"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:layout_below="@+id/nametitleTv"
                android:id="@+id/lastupdatedTv"
                android:layout_marginLeft="20dp"
                android:textColor="@color/appTextColor"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs: 12,000"
                android:id="@+id/amountTv"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/petitamedium"
                android:textSize="18dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textColor="@color/appTextColorPurple"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>