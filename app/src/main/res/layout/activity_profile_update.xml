<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:background="#ffffff"
    android:gravity="center"
    tools:context=".Activities.customers.CustomerUpdateActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/backbtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/submittBtn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/petitamedium"
                android:text="@string/fullnamestr_inADDC"
                android:textColor="@color/appTextColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:id="@+id/nameEt_increatecustomer"
                android:inputType="text"
                android:hint="John Doe."/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailstr_inADDC"
                android:layout_marginLeft="3dp"
                android:textColor="@color/appTextColor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/petitamedium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:id="@+id/emmailEt_increatecustomer"
                android:inputType="textEmailAddress"
                android:hint="John@digiaccountz.com"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobilenumberstr_inADDC"
                android:layout_marginLeft="3dp"
                android:textColor="@color/appTextColor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/petitamedium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:maxLength="12"
                android:id="@+id/mobileEt_increatecustomer"
                android:inputType="number"
                android:hint="92XXXXXXXXXX"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addressstr_inADDC"
                android:layout_marginLeft="3dp"
                android:textColor="@color/appTextColor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/petitamedium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="17dp"
                android:id="@+id/AdressEt_increatecustomer"
                android:inputType="text"
                android:hint="House no/3324"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

        </LinearLayout>




    </LinearLayout>


    <Button
        android:id="@+id/submittBtn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:background="@drawable/bluelanguagebtn"
        android:fontFamily="@font/petitamedium"
        android:text="Update Record"
        android:textColor="#ffffff" />



</RelativeLayout>