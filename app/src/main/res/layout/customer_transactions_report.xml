<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        style="@style/report_heading"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/tv_customer_name_full_business"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Customer Name"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lllo"
        android:id="@+id/recyclerview_transactions_fb"
        android:layout_marginTop="@dimen/_5sdp"
        ></androidx.recyclerview.widget.RecyclerView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/net_balance"
            android:maxLines="2"
            android:id="@+id/youwillgivetxt2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading... "
            android:layout_marginRight="@dimen/_10sdp"

            android:id="@+id/youwillgiveval2"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="@dimen/_8ssp"
            />





    </LinearLayout>





</LinearLayout>